<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="#FFFFFF"
    android:padding="40dp">

    <RelativeLayout
        android:id="@+id/settings_rl"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/settings_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/user"></de.hdodenhof.circleimageview.CircleImageView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@android:drawable/ic_menu_camera"
            android:background="#FFEB3B">
        </ImageView>
    </RelativeLayout>

    <EditText
        android:id="@+id/settings_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/border"
        android:padding="8dp"
        android:text=""
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="#2196F3"></EditText>

    <Button
        android:id="@+id/settings_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="#00BCD4"
        android:text="Update"
        android:textColor="#ffffff"
        android:textSize="19dp"
        android:elevation="5dp">
    </Button>

    <ProgressBar
        android:id="@+id/settings_pbar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/settings_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:indeterminate="true"
        android:indeterminateTint="#2196F3"
        android:indeterminateTintMode="src_atop"
        android:visibility="invisible"></ProgressBar>

</RelativeLayout>