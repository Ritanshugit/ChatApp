<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="35dp"
    tools:context=".Signin">

    <RelativeLayout
        android:id="@+id/sgn_rl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sgn_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/user">
        </de.hdodenhof.circleimageview.CircleImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">
        </ImageView>
    </RelativeLayout>

    <EditText
        android:id="@+id/sgn_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sgn_rl"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="#000000"
        android:fontFamily="sans-serif"
        android:hint="Enter name"
        android:inputType="textEmailAddress"
        android:textColor="#009688"
        android:textColorHint="#00BCD4"
        android:textSize="16dp"></EditText>

    <EditText
        android:id="@+id/sgn_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sgn_name"
        android:layout_marginTop="18dp"
        android:backgroundTint="#000000"
        android:fontFamily="sans-serif"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:textColor="#009688"
        android:textColorHint="#00BCD4"
        android:textSize="16dp"></EditText>

    <EditText
        android:id="@+id/sgn_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sgn_email"
        android:layout_centerInParent="true"
        android:layout_marginTop="18dp"
        android:backgroundTint="#000000"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#009688"
        android:textColorHint="#00BCD4"
        android:textSize="16dp"></EditText>

    <TextView
        android:id="@+id/sgn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sgn_psd"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="Already have account? Sign In"
        android:textColor="@color/teal_700"></TextView>

    <Button
        android:id="@+id/sgn_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sgn_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="#8BC34A"
        android:text="Register"
        android:textColor="#ffffff"
        android:textSize="19dp"></Button>

    <ProgressBar
        android:id="@+id/sgn_pbar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/sgn_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#009688"
        android:visibility="invisible">
    </ProgressBar>

</RelativeLayout>
